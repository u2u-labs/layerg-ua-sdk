{
    "compilerOptions": {
      "resolveJsonModule": true,
      "target": "es2018",
      "module": "commonjs",
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./packages"
    },
    "exclude": ["node_modules", "dist"]
}